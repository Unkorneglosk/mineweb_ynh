{
    "name": "MineWeb",
    "id": "mineweb",
    "packaging_format": 1,
    "description": {
        "en": "MineWeb package for YunoHost.",
        "fr": "MineWeb pour YunoHost."
    },
    "version": "1.7.0",
    "url": "https://mineweb.org/",
    "license": "free",
    "maintainer": {
        "name": "liberodark",
        "email": "liberodark@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for MineWeb",
                    "fr": "Choisissez un nom de domaine pour MineWeb"
                },
                "example": "example.com"
            },

            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for MineWeb /mineweb is accepted",
                    "fr": "Choisissez un chemin pour MineWeb /mineweb est accept√©"
                },
                "example": "/mineweb",
                "default": "/mineweb"
            },
            
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "default": "true"
            }
        ]
    }
}
